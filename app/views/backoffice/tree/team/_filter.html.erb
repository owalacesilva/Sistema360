<div class="">
  <div class="card mb-3">
    <h6 class="card-header">
      <%= fa_icon "filter fw" %><span>Filtro</span>
    </h6>
    <div class="card-body">
      <%= form_tag backoffice_tree_team_index_path, method: :get do -%>
        <div class="row g-3">
          <div class="col-lg-3">
            <label for="name" class="form-label">Usuário</label>
            <%= text_field_tag :name, @filters.name, class: 'form-control' %>
          </div>
          <div class="col-lg-3">
            <label for="sponsor_name" class="form-label">Patrocinador</label>
            <%= text_field_tag :sponsor_name, @filters.sponsor_name, class: 'form-control' %>
          </div>
          <div class="col-lg-3">
            <label for="email" class="form-label">Email</label>
            <%= email_field_tag :email, @filters.email, class: 'form-control' %>
          </div>
          <div class="col-lg-3">
            <label for="phone_number" class="form-label">Telefone</label>
            <%= text_field_tag :phone_number, @filters.phone_number, class: 'form-control' %>
          </div>
          <div class="col-lg-3">
            <label for="registered_in" class="form-label">Registrado em</label>
            <% periods = { 'Últimos 30 dias': '2022-07-23', 'Últimos 7 dias': '2022-08-16', 'Ontem': '2022-08-22', 'Hoje': '2022-08-23' } %>
            <%= select_tag :registered_in, options_for_select(periods, @filters.registered_in), { prompt: "-- Selecione um Periodo --", class: 'form-control chosen-select' } %>
          </div>
          <div class="col-lg-3">
            <label for="status" class="form-label">Situação</label>
            <% statuses = human_attribute_enum('user', User.statuses, 'status') %>
            <%= select_tag :status, options_for_select(statuses, @filters.status), { prompt: "-- Selecione um status --", class: 'form-control chosen-select' } %>
          </div>
        </div>
        <div class="row g-3">
          <div class="col">
            <div class="row g-1 justify-content-end">
              <div class="col-auto">
                <%= submit_tag "Filtrar", class: "btn btn-success", data: { disable_with: 'Filtrando...' } %>
              </div>
              <div class="col-auto">
                <%= link_to 'Limpar filtro', backoffice_tree_team_index_path(clear_filter: true), class: 'btn btn-light btn-danger-hover', data: { disable_with: 'Limpando...' } %>
              </div>
            </div>
          </div>
        </div>
      <%- end %>
    </div>
  </div>
</div>