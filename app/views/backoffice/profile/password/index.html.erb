<%= render layout: 'backoffice/shared/layout', locals: { page: "profile" } do %>
  <div id="page-dashboard" class="container-fluid mt-3">
    <div class="page-header">
      <%= fa_icon "key fw" %>
      <span>Alterar Senha</span>
    </div>
    <div class="form-signup">
      <div class="row">
        <div class="col-md-6 offset-md-3">
          <% flash.each do |name, msg| %>
            <% if msg.is_a?(String) %>
              <div class="alert alert-dismissible alert-<%= name.to_s == 'notice' ? 'success' : 'danger' %>">
                <%= content_tag :div, msg, :id => "flash_#{name}" %>
              </div>
            <% end %>
          <% end %>
          <%= form_for @user, as: :user, url: backoffice_profile_update_password_path, method: :post do |f| %>
            <%= render "users/shared/error_messages", resource: @user %>
            <div class="card shadow-sm mb-3">
              <div class="card-body">
                <div class="form-group mb-3">
                  <%= label :user, "Senha atual", class: "form-label" %>
                  <b class="text-danger">*</b>
                  <%= password_field :user, :current_password, autocomplete: "new-password", class: "form-control", required: true %>
                </div>
                <div class="form-group mb-3">
                  <%= label :user, "Nova senha", class: "form-label" %>
                  <b class="text-danger">*</b>
                  <%= f.password_field :password, autocomplete: "new-password", class: "form-control mb-0", required: true %>
                  <small>A senha deve conter no mínimo 8 caracteres com letras maiúsculas, minúsculas e números.</small>
                </div>
                <div class="form-group mb-3">
                  <%= f.label :password_confirmation, class: "form-label" %>
                  <b class="text-danger">*</b>
                  <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", required: true %>
                </div>
              </div>
            </div>
            <div class="text-end">
              <%= f.submit "Alterar senha", class: "btn btn-primary" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
<%- end %>
