<%= render layout: 'backoffice/shared/layout', locals: { page: 'tree_team' } do %>
  <div id="page-dashboard" class="container-fluid mt-3">
    <div class="page-header">
      <%= fa_icon "sitemap fw" %>
      <span>Minha Equipe</span>
    </div>
    <%= render 'filter' %>
    <div class="card mb-3">
      <div class="card-body">
        <div class="row d-none">
          <div class="col-lg-6">
            <form>
              <div class="row mb-3">
                <label for="inputEmail3" class="col-sm-2 col-form-label">Procurar</label>
                <div class="col-sm-6">
                  <input type="text" class="form-control" cname="name" />
                </div>
              </div>
            </form>
          </div>
          <div class="col-lg-6 text-end">
            <%= link_to "Exportar CSV", "#", class: "btn btn-primary" %>
          </div>
        </div>
        <div class="row">
          <div class="col">
            <%= page_entries_info @users, entry_name: 'item' %>
          </div>
          <div class="col-3">
            <div class="row justify-content-center">
              <div class="col">
                <%= link_to_previous_page @users, 'Previous Page' %>
              </div>
              <div class="col">
                <%= link_to_next_page @users, 'Next Page' %>
              </div>
            </div>
          </div>
        </div>
        <table class="table table-striped mt-4">
          <thead>
            <tr>
              <th scope="col">Usuário</th>
              <th scope="col">Patrocinador</th>
              <th scope="col">E-mail</th>
              <th scope="col">Telefone</th>
              <th scope="col">Celular</th>
              <th scope="col">Cidade/UF</th>
              <th scope="col">Situação</th>
              <th scope="col">Cadastro</th>
              <th scope="col">Ações</th>
            </tr>
          </thead>
          <tbody>
            <% @users.each do |user| %>
              <tr>
                <td><%= user.first_name %></td>
                <td><%= user.sponsor.first_name %></td>
                <td><%= user.email %></td>
                <td><%= user.phone_number %></td>
                <td><%= user.personal_number %></td>
                <td><%= "#{user.city}/#{user.state}" %></td>
                <td>
                  <span class="badge rounded-pill bg-success">Ativo</span>
                </td>
                <td><%= user.created_at.to_date.strftime('%d/%m/%Y') %></td>
                <td><%= link_to "Pedidos", "#", class: "btn btn-dark" %></td>
              </tr>
            <%- end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
<%- end %>
