<div class="black-bar fuse"></div>
<div class="container container-common px-0">
  <div class="main-content py-3">
    <div class="row">
      <div class="col-12">
        <div class="card mb-2">
          <div id="carouselExampleFade" class="carousel slide carousel-fade" data-ride="carousel">
            <div class="carousel-inner">
              <div class="carousel-item active">
                <div class="card-feature-image">
                  <%= image_tag 'auction-banner', class: 'card-img-top', alt: '' %>
                </div>
              </div>
              <div class="carousel-item">
                <div class="card-feature-image">
                  <%= image_tag 'auction-banner', class: 'card-img-top', alt: '' %>
                </div>
              </div>
              <div class="carousel-item">
                <div class="card-feature-image">
                  <%= image_tag 'auction-banner', class: 'card-img-top', alt: '' %>
                </div>
              </div>
            </div>
            <button class="carousel-control-prev" type="button" data-target="#carouselExampleFade" data-slide="prev">
              <span class="carousel-control-prev-icon" aria-hidden="true"></span>
              <span class="sr-only">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-target="#carouselExampleFade" data-slide="next">
              <span class="carousel-control-next-icon" aria-hidden="true"></span>
              <span class="sr-only">Next</span>
            </button>
          </div>
          <div class="card-body p-2">
            <h5 class="card-title">
              <%= @product.title -%>
            </h5>
            <p class="card-text">This is a wider card with supporting text below as a natural lead-in to additional content. This content is a little bit longer.</p>
            <span class="badge bg-success">Adquira já!</span>
          </div>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-12 text-center mb-3">
        por apenas <span class="badge bg-dark">R$ 25,00<span>
      </div>
      <div class="col-6 mb-3">
        Sorteio <span class="badge bg-light text-dark">21/08/2023 às 18h00<span>
      </div>
      <div class="col-6"></div>
      <div class="col-12">
        <div class="heading">
          <h1>⚡ Cotas</h1>
          <p class="desc">Escolha sua sorte</p>
        </div>
      </div>
    </div>
    <div class="d-grid gap-2">
      <button type="button" class="btn btn-success btn-sm">
        <%= fa_icon "shopping-cart fw lg" %> <span>Ver meus números</span>
      </button>
    </div>
    <%= form_tag auctions_checkout_path, method: :post do -%>
      <%= hidden_field_tag :product_id, @product.id %>
      <div class="card my-2">
        <div class="card-body">
          <div class="text-center mb-3 pt-2">
            <span class="text-muted font-xs">Selecione a quantidade de números</span>
          </div>
          <div class="d-flex align-items-center justify-content-center flex-column">
            <div class="sale-item">
              <div class="item p-2 me-2 mb-2 flex-column">
                <h3 class="mb-1">
                  <small class="text-dark">+</small>05
                </h3>
                <p class="text-muted font-xss text-uppercase m-0">Selecionar</p>
              </div>
              <div class="item p-2 me-2 mb-2 flex-column popular">
                <h3 class="mb-1">
                  <small class="text-dark">+</small>10
                </h3>
                <p class="text-muted font-xss text-uppercase">Selecionar</p>
              </div>
              <div class="item p-2 me-2 mb-2 flex-column">
                <h3 class="mb-1">
                  <small class="text-dark">+</small>50
                </h3>
                <p class="text-muted font-xss text-uppercase">Selecionar</p>
              </div>
              <div class="item p-2 me-2 mb-2 flex-column">
                <h3 class="mb-1">
                  <small class="text-dark">+</small>100
                </h3>
                <p class="text-muted font-xss text-uppercase">Selecionar</p>
              </div>
            </div>
            <div class="text-center">
              <div class="text-center">
                <%= text_field_tag :quantity, 0, class: 'form-control text-center', min: 0, max: 100, readonly: true %>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="d-grid gap-2">
        <button type="submit" class="btn btn-success">
          <div class="row align-items-center">
            <div class="col pe-0 text-nowrap">
              <span>Participar do sorteio</span>
            </div>
            <div class="col-auto ps-0">
              <span>R$ 100,00</span>
            </div>
          </div>
        </button>
      </div>
    <%- end %>
  </div>
</div>
