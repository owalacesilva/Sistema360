<%= render layout: 'backoffice/shared/layout', locals: { page: 'tree' } do %>
  <div id="page-dashboard" class="container-fluid mt-3">
    <div class="page-header">
      <%= fa_icon "calendar fw" %>
      <span>Meus Diretos</span>
    </div>
    <%= render 'filter' %>
    <div class="card mb-3">
      <div class="card-body">
        <table class="table table-striped">
          <thead>
            <tr>
              <th scope="col">COD</th>
              <th scope="col">Usuário</th>
              <th scope="col">Nome</th>
              <th scope="col">E-mail</th>
              <th scope="col">Telefone</th>
              <th scope="col">Celular</th>
              <th scope="col">Cidade/UF</th>
              <th scope="col">Situação</th>
              <th scope="col">Pontuação</th>
            </tr>
          </thead>
          <tbody>
            <% @users.each do |user| %>
              <tr>
                <td><%= user.id %></td>
                <td><%= user.username %></td>
                <td><%= user.first_name %></td>
                <td><%= user.email %></td>
                <td><%= user.phone_number %></td>
                <td><%= user.personal_number %></td>
                <td><%= "#{user.city}-#{user.state_abbr}" %></td>
                <td>
                  <span class="badge rounded-pill bg-success">Ativo</span>
                </td>
                <td><%= user.point_amount("ACTIVATION") %></td>
              </tr>
            <%- end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
<%- end %>
